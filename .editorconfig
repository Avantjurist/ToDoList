#Stop searching .editorconfig files
root = true

[*]
charset = utf-8

#indent_style might be tab or space
indent_style = space
indent_size = 4

#end_of_line might be:
# lf - line feed
# cr - carriage return
# crlf - cr + lf
end_of_line = lf

trim_trailing_whitespace = true
insert_final_newline = true

#Ignore .min files
[*.min.*]
indent_style = ignore
trim_trailing_whitespace = false
insert_final_newline = ignore
